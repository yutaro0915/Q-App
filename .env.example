# Database Configuration
DATABASE_URL=mysql://qapp_user:qapp_password@localhost:3306/qapp_db
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=qapp_db
MYSQL_USER=qapp_user
MYSQL_PASSWORD=qapp_password

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-development-jwt-secret-key-change-in-production
JWT_EXPIRE_MINUTES=1440

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com

# AWS Configuration (for production)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=ap-northeast-1
S3_BUCKET=qapp-dev-bucket

# Frontend Configuration
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Q-App Development

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:80"]

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_FOLDER=uploads/

# Development Settings
DEBUG=true
LOG_LEVEL=debug

# API Keys (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key