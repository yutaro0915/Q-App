FROM node:18-alpine

WORKDIR /app

# OpenSSL とその他の必要なパッケージをインストール
RUN apk add --no-cache openssl

# package.json と package-lock.json をコピー
COPY package*.json ./

# 依存関係をインストール
RUN npm install

# アプリケーションコードをコピー
COPY . .

# TypeScript をグローバルにインストール
RUN npm install -g typescript ts-node nodemon

EXPOSE 8005
CMD ["npm", "run", "dev"]